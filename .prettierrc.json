    "",
    "^@/libs/(.*)$",
    "^@/utils/(.*)$",
    "",
    "^@/hooks/(.*)$",
    "^@/components/(.*)$",
    "",
    "^@/styles/(.*)$",
    "",
    "^@/stores/(.*)$",
    "^@/providers/(.*)$",
    "",
    "^@/features/(.*)$",
    "^@/page-components/(.*)$",
    "^@/pages/(.*)$",
    "",
    "^[./]"
  ]
